{% extends 'base.html.twig' %}

{% block title %}Borrow Records{% endblock %}

{% block body %}
    <h1>Borrow Records</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Book</th>
                <th>Borrower</th>
                <th>Borrow Date</th>
                <th>Return Date</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for borrow_record in borrow_records %}
            <tr>
                <td>{{ borrow_record.id }}</td>
                <td>{{ borrow_record.book.title }}</td>
                <td>{{ borrow_record.borrowerName }}</td>
                <td>{{ borrow_record.borrowDate ? borrow_record.borrowDate|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ borrow_record.returnDate ? borrow_record.returnDate|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('app_borrow_show', {'id': borrow_record.id}) }}">show</a>
                    {% if not borrow_record.returnDate %}
                        {{ include('borrow/_return_form.html.twig') }}
                    {% endif %}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_borrow_new') }}">Create new</a>
{% endblock %}
