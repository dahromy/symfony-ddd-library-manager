{% extends 'base.html.twig' %}

{% block title %}Create New Book{% endblock %}

{% block body %}
    <h1 class="text-3xl font-bold mb-4">Create New Book</h1>

    {{ form_start(form, {'attr': {'class': 'space-y-4'}}) }}
        <div>
            {{ form_label(form.title) }}
            {{ form_widget(form.title) }}
        </div>
        <div>
            {{ form_label(form.isbn) }}
            {{ form_widget(form.isbn) }}
        </div>
        <div>
            {{ form_label(form.author) }}
            {{ form_widget(form.author) }}
        </div>
        <button type="submit" class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded">
            Create Book
        </button>
    {{ form_end(form) }}

    <a href="{{ path('get_all_books') }}" class="text-blue-500 hover:text-blue-700 mt-4 inline-block">Back to list</a>
{% endblock %}
