{% extends 'base.html.twig' %}

{% block title %}Book Details{% endblock %}

{% block body %}
    <div class="max-w-4xl mx-auto bg-white p-6 rounded-lg shadow-md">
        <h1 class="text-3xl font-semibold mb-6 text-gray-800">Book Details</h1>

        <div class="mb-6">
            <h2 class="text-2xl font-semibold text-gray-700 mb-2">{{ book.title }}</h2>
            <p class="text-gray-600 mb-1"><span class="font-semibold">ISBN:</span> {{ book.isbn }}</p>
            <p class="text-gray-600"><span class="font-semibold">Author:</span> {{ book.author.name }}</p>
        </div>

        <div class="flex space-x-4">
            <a href="{{ path('update_book', {'id': book.id}) }}" class="inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">Edit</a>
            <a href="{{ path('get_all_books') }}" class="inline-flex items-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">Back to list</a>
        </div>
    </div>
{% endblock %}
