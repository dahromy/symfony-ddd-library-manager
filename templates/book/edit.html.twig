{% extends 'base.html.twig' %}

{% block title %}Edit Book{% endblock %}

{% block body %}
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card mt-5">
                    <div class="card-body">
                        <h1 class="h3 mb-3 font-weight-normal text-center">Edit Book</h1>

                        {{ form_start(form) }}
                            <div class="form-group">
                                {{ form_label(form.title) }}
                                {{ form_widget(form.title, {'attr': {'class': 'form-control'}}) }}
                            </div>
                            <div class="form-group">
                                {{ form_label(form.isbn) }}
                                {{ form_widget(form.isbn, {'attr': {'class': 'form-control'}}) }}
                            </div>
                            <div class="form-group">
                                {{ form_label(form.author) }}
                                {{ form_widget(form.author, {'attr': {'class': 'form-control'}}) }}
                            </div>
                            <div class="form-group">
                                <button type="submit" class="btn btn-primary btn-block">Update Book</button>
                            </div>
                        {{ form_end(form) }}

                        <div class="text-center mt-3">
                            <a href="{{ path('get_all_books') }}" class="text-primary">Back to list</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
