<!DOCTYPE html>
<html lang="en" class="h-full bg-gray-50">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>{% block title %}Welcome to Our Library{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>ðŸ“š</text></svg>">
        {% block stylesheets %}
            {{ importmap('app') }}
            <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
        {% endblock %}

        {% block javascripts %}
            {{ importmap('app') }}
            <script src="https://cdn.jsdelivr.net/npm/alpinejs@3.x.x/dist/cdn.min.js" defer></script>
            <script>
                document.addEventListener('turbo:load', () => {
                    Alpine.start();
                });
            </script>
        {% endblock %}
    </head>
    <body class="h-full antialiased" data-turbo="true" x-data="{ mobileMenuOpen: false }">
        <div class="min-h-full">
            {% block header %}
                <nav class="bg-indigo-600">
                    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
                        <div class="flex items-center justify-between h-16">
                            <div class="flex items-center">
                                <div class="flex-shrink-0">
                                    <a href="{{ path('home') }}" class="text-white font-bold text-xl">ðŸ“š Our Library</a>
                                </div>
                                <div class="hidden md:block">
                                    <div class="ml-10 flex items-baseline space-x-4">
                                        <a href="{{ path('home') }}" class="text-gray-300 hover:bg-indigo-700 hover:text-white px-3 py-2 rounded-md text-sm font-medium">Home</a>
                                        <a href="{{ path('app_book_index') }}" class="text-gray-300 hover:bg-indigo-700 hover:text-white px-3 py-2 rounded-md text-sm font-medium">Books</a>
                                        <a href="{{ path('app_author_index') }}" class="text-gray-300 hover:bg-indigo-700 hover:text-white px-3 py-2 rounded-md text-sm font-medium">Authors</a>
                                        <a href="{{ path('app_borrow_index') }}" class="text-gray-300 hover:bg-indigo-700 hover:text-white px-3 py-2 rounded-md text-sm font-medium">Borrow Records</a>
                                    </div>
                                </div>
                            </div>
                            <div class="hidden md:block">
                                <div class="ml-4 flex items-center md:ml-6">
                                    {% if app.user %}
                                        <span class="text-gray-300 mr-4">Welcome, {{ app.user.email }}</span>
                                        <a href="{{ path('app_logout') }}" class="text-gray-300 hover:bg-indigo-700 hover:text-white px-3 py-2 rounded-md text-sm font-medium">Logout</a>
                                    {% else %}
                                        <a href="{{ path('app_login') }}" class="text-gray-300 hover:bg-indigo-700 hover:text-white px-3 py-2 rounded-md text-sm font-medium">Login</a>
                                        <a href="{{ path('app_register') }}" class="text-white bg-indigo-500 hover:bg-indigo-400 px-3 py-2 rounded-md text-sm font-medium ml-2">Register</a>
                                    {% endif %}
                                </div>
                            </div>
                            <div class="-mr-2 flex md:hidden">
                                <button @click="mobileMenuOpen = !mobileMenuOpen" type="button" class="bg-indigo-600 inline-flex items-center justify-center p-2 rounded-md text-gray-400 hover:text-white hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-offset-indigo-600 focus:ring-white" aria-controls="mobile-menu" aria-expanded="false">
                                    <span class="sr-only">Open main menu</span>
                                    <svg class="block h-6 w-6" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
                                    </svg>
                                    <svg class="hidden h-6 w-6" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
                                    </svg>
                                </button>
                            </div>
                        </div>
                    </div>

                    <div class="md:hidden" id="mobile-menu" x-show="mobileMenuOpen">
                        <div class="px-2 pt-2 pb-3 space-y-1 sm:px-3">
                            <a href="{{ path('home') }}" class="text-gray-300 hover:bg-indigo-700 hover:text-white block px-3 py-2 rounded-md text-base font-medium">Home</a>
                            <a href="{{ path('app_book_index') }}" class="text-gray-300 hover:bg-indigo-700 hover:text-white block px-3 py-2 rounded-md text-base font-medium">Books</a>
                            <a href="{{ path('app_author_index') }}" class="text-gray-300 hover:bg-indigo-700 hover:text-white block px-3 py-2 rounded-md text-base font-medium">Authors</a>
                            <a href="{{ path('app_borrow_index') }}" class="text-gray-300 hover:bg-indigo-700 hover:text-white block px-3 py-2 rounded-md text-base font-medium">Borrow Records</a>
                        </div>
                        <div class="pt-4 pb-3 border-t border-indigo-700">
                            <div class="flex items-center px-5">
                                {% if app.user %}
                                    <span class="text-gray-300 mr-4">Welcome, {{ app.user.email }}</span>
                                    <a href="{{ path('app_logout') }}" class="text-gray-300 hover:bg-indigo-700 hover:text-white block px-3 py-2 rounded-md text-base font-medium">Logout</a>
                                {% else %}
                                    <a href="{{ path('app_login') }}" class="text-gray-300 hover:bg-indigo-700 hover:text-white block px-3 py-2 rounded-md text-base font-medium">Login</a>
                                    <a href="{{ path('app_register') }}" class="text-white bg-indigo-500 hover:bg-indigo-400 block px-3 py-2 rounded-md text-base font-medium ml-2">Register</a>
                                {% endif %}
                            </div>
                        </div>
                    </div>
                </nav>
            {% endblock %}

            {% block main %}
                <main>
                    <div class="max-w-7xl mx-auto py-6 sm:px-6 lg:px-8">
                        <div class="px-4 py-6 sm:px-0">
                            <div class="border-4 border-dashed border-gray-200 rounded-lg h-96">
                                {% block body %}{% endblock %}
                            </div>
                        </div>
                    </div>
                </main>
            {% endblock %}

            {% block footer %}
                <footer class="bg-gray-800">
                    <div class="max-w-7xl mx-auto py-4 px-4 sm:px-6 lg:px-8">
                        <p class="text-center text-gray-400 text-sm">&copy; {{ "now"|date("Y") }} Our Library. All rights reserved.</p>
                    </div>
                </footer>
            {% endblock %}
        </div>
    </body>
</html>
