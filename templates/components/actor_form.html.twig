<div {{ attributes }}>
    {{ form_start(form, {'attr': {'class': 'mt-8 space-y-6', 'novalidate': 'novalidate'}}) }}
        {% if form.vars.errors|length > 0 %}
            <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative mb-4" role="alert">
                <ul>
                    {% for error in form.vars.errors %}
                        <li>{{ error.message }}</li>
                    {% endfor %}
                </ul>
            </div>
        {% endif %}
        <div class="rounded-md shadow-sm">
            <div>
                {{ form_widget(form.name, {'attr': {'class': 'appearance-none rounded-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-t-md focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 focus:z-10 sm:text-sm', 'placeholder': 'Actor Name'}}) }}
                {% if form.name.vars.errors|length > 0 %}
                    <div class="bg-white text-red-500 text-xs p-2 border-b border-l border-r border-red-400">
                        {{ form_errors(form.name) }}
                    </div>
                {% endif %}
            </div>
            <div>
                {{ form_widget(form.birthDate, {'attr': {'class': 'appearance-none rounded-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-b-md focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 focus:z-10 sm:text-sm', 'placeholder': 'Birth Date'}}) }}
                {% if form.birthDate.vars.errors|length > 0 %}
                    <div class="bg-white text-red-500 text-xs p-2 border-b border-l border-r border-red-400">
                        {{ form_errors(form.birthDate) }}
                    </div>
                {% endif %}
            </div>
        </div>

        <div>
            <button type="submit" class="group relative w-full flex justify-center py-2 px-4 border border-transparent text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
                {{ submitLabel|default('Submit') }}
            </button>
        </div>
    {{ form_end(form) }}
</div>
