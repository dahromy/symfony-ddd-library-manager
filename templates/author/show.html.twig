{% extends 'base.html.twig' %}

{% block title %}Author Details{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1 class="mb-4">Author Details</h1>

        <div class="card">
            <div class="card-body">
                <h2 class="card-title">{{ author.name }}</h2>
                <p class="card-text"><strong>ID:</strong> {{ author.id }}</p>
            </div>
        </div>

        <div class="mt-4">
            <a href="{{ path('app_author_index') }}" class="btn btn-secondary">Back to List</a>
            <a href="{{ path('app_author_edit', {'id': author.id}) }}" class="btn btn-primary">Edit</a>
        </div>
    </div>
{% endblock %}
